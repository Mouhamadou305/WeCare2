@model EhodBoutiqueEnLigne.Models.ViewModels.OrderViewModel

<h2>@Localizer["OrderTitle"]</h2>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Index" asp-controller="Order" method="post">
    <h3>@Localizer["ShipTo"]</h3>
    <div class="mb-3">
        <label asp-for="Name">@Localizer["Name"]*:</label>
        <input asp-for="Name" class="form-control" />
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
    </div>
    <h3>@Localizer["Address"]</h3>
    <div class="mb-3">
        <label asp-for="Address">@Localizer["Location"]*:</label>
        <input asp-for="Address" class="form-control" />
        <div><span asp-validation-for="Address" class="text-danger"></span></div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="City">@Localizer["City"]*:</label>
            <input asp-for="City" class="form-control" />
            <div><span asp-validation-for="City" class="text-danger"></span></div>
        </div>
        <div class="col-4">
            <label asp-for="Zip">@Localizer["Zip"]*:</label>
            <input asp-for="Zip" class="form-control" />
            <div><span asp-validation-for="Zip" class="text-danger"></span></div>
        </div>
        <div class="col-4">
            <label asp-for="Country">@Localizer["Country"]*:</label>
            <input asp-for="Country" class="form-control" />
            <div><span asp-validation-for="Country" class="text-danger"></span></div>
        </div>
    </div>
        <input class="btn btn-primary" type="submit" value="@Localizer["CompleteOrder"]" />
</form>
